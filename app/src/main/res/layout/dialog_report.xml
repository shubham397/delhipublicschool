<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/txt_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select Day"
        android:textSize="15dp"
        android:textColor="#000000"
        android:layout_marginLeft="35sp"/>

    <android.support.v7.widget.AppCompatSpinner
        android:id="@+id/spinner_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="-5dp"
        android:layout_toRightOf="@+id/txt_date"/>

    <TextView
        android:id="@+id/txt_month"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select Month"
        android:textSize="15dp"
        android:textColor="#000000"
        android:layout_below="@+id/txt_date"
        android:layout_alignEnd="@+id/txt_date"
        android:layout_marginTop="25sp"
        android:layout_alignRight="@+id/txt_date"/>

    <android.support.v7.widget.AppCompatSpinner
        android:id="@+id/spinner_month"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/txt_month"
        android:layout_marginTop="30sp"/>

    <TextView
        android:id="@+id/txt_year"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select Year"
        android:textSize="15dp"
        android:textColor="#000000"
        android:layout_alignEnd="@+id/txt_date"
        android:layout_alignRight="@+id/txt_date"
        android:layout_marginTop="25sp"
        android:layout_below="@+id/txt_month"/>

    <android.support.v7.widget.AppCompatSpinner
        android:id="@+id/spinner_year"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/txt_year"
        android:layout_marginTop="75sp"
        />

</RelativeLayout>